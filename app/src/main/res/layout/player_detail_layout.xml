<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ScrollView android:layout_width="wrap_content" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:scaleType="fitXY" android:id="@+id/thumbnail" android:layout_width="match_parent" android:layout_height="220dp"
                   android:layout_alignParentStart="true" android:layout_alignParentTop="true"/>
        <RelativeLayout android:id="@+id/info_container" android:layout_marginTop="12dp"
                        android:layout_below="@id/thumbnail" android:layout_width="match_parent"
                        android:layout_height="wrap_content">
            <RelativeLayout android:layout_centerInParent="true" android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                <RelativeLayout android:id="@+id/weight_container" android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                    <TextView android:id="@+id/weight_title" android:textSize="24sp"
                              android:textColor="@color/colorAccent"
                              android:text="Weight (kg)" android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_marginTop="10dp" android:layout_centerHorizontal="true"
                              android:layout_below="@id/weight_title" android:id="@+id/weight" android:textSize="17sp"
                              android:textColor="@color/colorAccent" android:text="weight"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout android:layout_marginLeft="40dp" android:layout_toRightOf="@id/weight_container"
                                android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:id="@+id/height_title" android:textSize="24sp"
                              android:textColor="@color/colorAccent"
                              android:text="Height (m)" android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_marginTop="10dp" android:layout_centerHorizontal="true"
                              android:layout_below="@id/height_title" android:id="@+id/height" android:textSize="17sp"
                              android:textColor="@color/colorAccent" android:text="height"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <TextView android:id="@+id/position_text" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
                  android:textColor="@color/colorAccent" android:textSize="24sp"
                  android:layout_below="@id/info_container" android:layout_centerHorizontal="true"
                  android:text="position" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/player_desc" android:layout_marginLeft="14dp" android:layout_marginRight="14dp" android:text="desc"
                  android:layout_below="@id/position_text" android:layout_width="match_parent"
                  android:layout_height="match_parent"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>